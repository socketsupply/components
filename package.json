{
  "name": "@optoolco/components",
  "version": "12.3.29",
  "description": "Example components",
  "scripts": {
    "dist": "esbuild --format=cjs --bundle --keep-names index.js > _dist/index.js",
    "prepare": "npm run dist && npm run lint",
    "lint": "standard -v",
    "test": "standard && npm run dist && esbuild --bundle _test/index.js | tape-run",
    "test:ci": "npm run dist && esbuild --bundle _test/index.js | tape-run",
    "test:open": "npm run dist && esbuild --bundle _test/index.js | tape-run --browser chrome --keep-open"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/optoolco/components.git"
  },
  "author": "optoolco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/optoolco/components/issues"
  },
  "standard": {
    "ignore": [
      "index.d.ts",
      "_types/**/*.d.ts",
      "_dist/**/*.js"
    ]
  },
  "homepage": "https://github.com/optoolco/components#readme",
  "devDependencies": {
    "@optoolco/tonic": "13.1.3",
    "@pre-bundled/send": "0.16.2-patch-1",
    "@pre-bundled/tape": "4.11.0",
    "chart.js": "^2.9.2",
    "esbuild": "0.13.8",
    "git-hooks": "1.1.10",
    "highlight.js": "^10.1.0",
    "marked": "^0.7.0",
    "node-fetch": "^2.6.1",
    "qsa-min": "1.0.2",
    "standard": "14.3.1",
    "tape-run": "^9.0.0",
    "tapzero": "^0.6.0"
  }
}
